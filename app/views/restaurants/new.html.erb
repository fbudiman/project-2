<div class="container">
  <div class="spacer">
    <div class="background-style">
      <div class="padding">
      <br>
        <h3>Add A New Restaurant:</h3>
      <br>

      <%= form_for @restaurant do |f| %>

      <div>
        <%= f.label :name, class: 'control-label' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
        <br>
      <div>
        <%= f.label :location, "City, State", class: 'control-label' %>
        <center><%= f.text_field :location, class: 'form-control', id: 'restaurant-location' %></center>
      </div>
        <br>
        <%= f.submit "Submit New Restaurant", class: 'btn btn-danger' %>
        <br>
        <br>

      <% end %>

      <%= link_to "Back to Restaurant List", restaurants_path %>
        <br>
      </div>
    </div>
  </div>
</div>

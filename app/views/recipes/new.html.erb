<div class="container">
  <div class="spacer">
    <div class="background-style">
      <div class="padding">
        <br>
          <h3>Add A New Recipe:</h3>
        <br>

        <%= form_for @recipe do |f| %>

          <div>
            <%= f.label :title, class: 'control-label' %>
            <center><%= f.text_field :title, class: 'form-control' %></center>
          </div>
            <br>
          <div>
            <%= f.label :body, "Recipe Ingredients & Directions", class: 'control-label' %>
            <center><%= f.text_area :body, class: 'form-control', id: 'recipe-form' %></center>
          </div>
            <br>
          <div>
            <%= f.label :restaurant_id, "Restaurant", class: 'control-label' %>
            <center><%= f.select(:restaurant_id, options_for_select(@restaurants.collect{ |restaurant| [restaurant.name, restaurant.id] }.sort)) %></center>
          </div>
            <%= f.hidden_field :user_id, :value => current_user.id %>
            <br>
            <%= f.submit "Create Your Recipe", class: 'btn btn-danger' %>
            <br>
            <br>

        <% end %>
     </div>
    </div>
    <br>
    <br>
    <br>
  </div>
</div>

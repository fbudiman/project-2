<div class="container">
  <div class="spacer">
    <div class="background-style">
      <div class="padding">
        <br>
        <h3>Edit User Info:</h3>
        <br>

        <%= form_for @user do |f| %>

          <div>
            <%= f.label :name, class: 'control-label' %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
            <br>
          <div>
            <%= f.label :profile_pic_url, "Profile Pic URL", class: 'control-label' %>
            <%= f.text_field :profile_pic_url, class: 'form-control' %>
          </div>
            <br>
          <div>
            <%= f.label :email, class: 'control-label' %>
            <%= f.email_field :email, class: 'form-control' %>
          </div>
            <br>
          <div>
            <%= f.label :password, class: 'control-label' %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
            <br>
          <div>
            <%= f.label :password_confirmation, "Password Confirmation", class: 'control-label' %>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>
            <br>
            <%= f.submit "Update Your Profile", class: 'btn btn-danger' %>
          <br>
          <br>
    <% end %>
      </div>
    </div>
    <br>
    <br>
    <br>
  </div>
</div>

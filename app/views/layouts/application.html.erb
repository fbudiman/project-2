<!DOCTYPE html>
<html>
<head>
  <title>RecipeIt</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
<% if content_for? :for_head %>
  <%= yield :for_head %>
<% end %>

</head>
<body>

<header>
  <h1 id="main-header"><%= link_to "RecipeIt", users_path %></h1>


  <div id="search-bar">
    <%= form_tag('/recipes', method:"get") do %>
    <strong>Search By</strong>
    <%= select_tag "search", options_for_select([["Restaurant", "restaurant"], ["Recipe", "title"]]) %>
    <%= text_field_tag :query %>
    <%= submit_tag "Search" %>
    <% end %>
  </div>



  <div id="user-header">

    <span id="alert">
    <% flash.each do |key,value| %>
        <div class="<%= key %>" > <%= value %></div>
    <% end %>
    </span>

    <% if !current_user %>

      <%= form_for @user, url: create_session_path do |f| %>


      <div class="user-header">
        <%= f.label :email %>
        <%= f.email_field :email %>
      </div>
      <div class="user-header">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>
        <%= f.submit "Login" %>


      <% end %>

      <div class="user-header"><%= link_to "Create An Account", new_user_path %></div>

    <% else %>

        <div class="user-header"><%= link_to "Your Account", user_path(current_user) %></div> |
        <div class="user-header"><%= link_to "Logout", destroy_session_path %></div>
    <% end %>

  </div>

</header>

<%= yield %>

<script type="text/javascript" src="http://code.jquery.com/jquery-1.6.4.min.js"></script>
</body>
</html>
